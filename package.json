{
  "name": "@templ-project/javascript",
  "version": "0.1.0",
  "description": "Javascript Project Template",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clear": "run-s clear:*",
    "clear:node-modules": "find . -name \"node_modules\" -maxdepth 1 -exec rm -rf {} \\;",
    "clear:lock-files": "rm -rf yarn.lock package-lock.json",
    "lint": "cross-env DEBUG=eslint:eslint npx eslint --fix .",
    "prepare": "npx husky",
    "test": "npm run test --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/templ-project/javascript.git"
  },
  "author": "Dragos Cirjan <dragos.cirjan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/templ-project/javascript/issues"
  },
  "homepage": "https://github.com/templ-project/javascript#readme",
  "devDependencies": {
    "@jscpd/badge-reporter": "^4.0.1",
    "@types/node": "^22.13.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,ts,json,yaml}": [
      "npx eslint --fix"
    ],
    "packages/**/*.{js,ts}": [
      "echo npx vitest related --run"
    ]
  },
  "importSort": {
    ".js, .jsx": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  },
  "dependencies": {
    "npm-run-all2": "^7.0.2"
  }
}
