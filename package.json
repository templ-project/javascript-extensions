{
  "name": "@templ-project/javascript",
  "version": "0.0.1",
  "description": "Javascript Project Template",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "lint": "eslint --fix .",
    "prepare": "husky",
    "test": "npm run test --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/templ-project/javascript.git"
  },
  "author": "Dragos Cirjan <dragos.cirjan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/templ-project/javascript/issues"
  },
  "homepage": "https://github.com/templ-project/javascript#readme",
  "devDependencies": {
    "@types/node": "^22.13.1",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,ts,json,yaml}": [
      "npx eslint --fix",
      "git add"
    ],
    "packages/**/*.{js,ts}": [
      "npx vitest related --run"
    ]
  },
  "importSort": {
    ".js, .jsx": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module"
    }
  }
}
